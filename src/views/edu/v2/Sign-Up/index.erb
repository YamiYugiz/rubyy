    <main>
      <h1>Sign Up for Ruby Skillz</h1>
      <p>
        Enter your email address and password to sign up for the waiting list.
      </p>
      <form method="POST" action="/signup">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" />

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />

        <label for="grade">Grade:</label>
        <select id="grade" name="grade" required>
          <option value="">Select your grade</option>
          <option value="6">6th grade</option>
          <option value="7">7th grade</option>
          <option value="8">8th grade</option></select
        ><br /><br />
        <button type="submit">Submit</button>
      </form>

      <h2>Testimonials</h2>
      <section class="testimonial">
        <p>
          "My daughter struggled with math in middle school, but after just a
